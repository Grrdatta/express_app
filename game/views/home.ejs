  <!--this is for the over lay on the images when cursur moves on it it shows the name of the movie-->
  <div class="poster-info-overlay">
  <h3><%= movies[i].title %></h3>
  <h4>View More<i class="fa fa-arrow-right"></i></h4>
  </div>
</a>
  </div>

  <% } %>
  </div>
